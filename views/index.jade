doctype html
html
  head
    title= "nUlam Visulaizer"
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js')
    script(src='javascripts/script.js')

  body

block content
  h1#page-title nUlam Visulaizer
  div#form.row
    div.wrapper
      div.col-md-10
        input#input.form-control(value="^(11)[47]$|^(13)[58]$|^(15)[69]$|2[2][0-2]|219|197|202")
      div.col-md-2
        select#method.form-control
          option(value=0)="RegEx"
          option(value=1)="Math"
          option(value=2)="Boolean"
          option(value=3)="OEIS"
  div#advanced.wrapper.row
    div.row.math
      div.col-md-1
        label.label.label-primary Target
      div.col-md-11
        select#math-target.form-control
          option(value=0)="Block Value"
          option(value=1)="Array Index"
          option(value=2)="Row"
          option(value=3)="Column"
  div.row
    div#verify-message
      span#message
  //div.row
    div.col-md-8
    div.col-md-2
      select#blocksize.form-control
        option(value=0)="Default"
        option(value=1)="Pixel"
        option(value=2)="X Small"
        option(value=3)="Small"
        option(value=4)="Medium"
        option(value=5)="Large"
        option(value=6)="X Large"
    div.col-md-2
      | Display Block Contents: 
      input(type='checkbox', checked=true)
  #squares.wrapper

